<h1 class="text-center mt-4">Marvel Comics</h1>
<div class="container">
  <div class="card-deck">
    <% @comics["data"]["results"].each do |comic| %>
        <div class="col-4 mt-4">
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-body">
              <div id="image-content"><%= image_tag("#{comic["thumbnail"]["path"] + "." + comic["thumbnail"]["extension"]}", height: 150, width: 150) %></div>
              <p class="card-text"><%= comic["title"] %></p>
              <%= link_to "Show Details", comic_path(comic["id"]), class: "btn btn-danger" %>
            </div>
            <div class="card-footer text-muted">
              <% if !comic["description"].nil? %>
                <small><%= comic["description"].empty? ? "No available description for this character" : simple_format(truncate(comic["description"], length: 80)) %></small>
              <% else %>
                <small><%= "No available description for this character" %></small>
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>


